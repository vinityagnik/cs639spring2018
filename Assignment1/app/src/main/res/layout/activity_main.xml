<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vinit.assignment_1.MainActivity">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/birdLayer"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img1"
            android:layout_margin="5dp"
            android:src="@drawable/bird"
            />

        <TextView
            android:layout_toRightOf="@id/img1"
            android:id="@+id/Birdtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/strBird"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/birdLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/catLayer"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img2"
            android:layout_margin="5dp"
            android:src="@drawable/cat"
            />

        <TextView
            android:layout_toRightOf="@id/img2"
            android:id="@+id/Cattxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/strCat" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/catLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dogLayer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/dog" />

        <TextView
            android:layout_toRightOf="@id/img3"
            android:id="@+id/Dogtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/strDog"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/dogLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/colorLayer"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnSilver"
            android:background="#C0C0C0"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnGreen"
            android:layout_toRightOf="@id/btnSilver"
            android:background="#008000"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnBlue"
            android:layout_toRightOf="@id/btnGreen"
            android:background="#0000FF"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnRed"
            android:layout_toRightOf="@id/btnBlue"
            android:background="#FF0000"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnOlive"
            android:layout_toRightOf="@id/btnRed"
            android:background="#808000"
            />



    </RelativeLayout>




</RelativeLayout>

